{% extends "layout.html.twig" %}

{% block body %}
  {{ parent() }}
  
  
    
    
    <div class="container">
        {{ include('RacRacBundle:Ganj:message/alertsuccess.html.twig') }}
	<div class="row">
            
            <h2>Formulario de Registro</h2>
            
            <hr>
            
	  <div class="col-md-2"></div>
	   <div class="col-md-8">
    
    {{ form_start(form, { 'attr' : {'novalidate' : 'novalidate', 'role' : 'form', 'class' : 'formulario'} } )}}
    
    <div class="col-md-4">
        
      <div class="form-group">
         {{ form_widget(form.firstname, { 'attr' : { 'class' : 'form-control', 'placeholder' : 'Frist name' } }) }}
        <span class="text-danger">{{ form_errors(form.firstname) }}</span>
      </div>
      
      <div class="form-group">
         {{ form_widget(form.lastname, { 'attr' : { 'class' : 'form-control', 'placeholder' : 'Last name' } }) }}
        <span class="text-danger">{{ form_errors(form.lastname) }}</span>
      </div>
      
      <div class="form-group">
         {{ form_widget(form.identificationcard, { 'attr' : { 'class' : 'form-control', 'placeholder' : 'Identification Card' } }) }}
        <span class="text-danger">{{ form_errors(form.firstname) }}</span>
      </div>
      
      <div class="form-group">
         {{ form_widget(form.birthdate, { 'attr' : { 'class' : 'form-control', 'placeholder' : 'Birthdate dd/mm/aaaa' } }) }}
        <span class="text-danger">{{ form_errors(form.birthdate) }}</span>
      </div>
      
      
        
    </div>
    
    <div class="col-md-4">
       
      <div class="form-group">
        {{ form_widget(form.mail, { 'attr' : { 'class' : 'form-control', 'placeholder' : 'E-mail' } }) }}
       <span class="text-danger">{{ form_errors(form.mail) }}</span>
      </div>
      
      <div class="form-group">
        {{ form_widget(form.address, { 'attr' : { 'class' : 'form-control', 'placeholder' : 'Address' } }) }}
       <span class="text-danger">{{ form_errors(form.address) }}</span>
      </div>
      
      <div class="form-group">
        {{ form_widget(form.phone, { 'attr' : { 'class' : 'form-control', 'placeholder' : 'Phone' } }) }}
       <span class="text-danger">{{ form_errors(form.phone) }}</span>
      </div>
      
      <div class="form-group">
        {{ form_widget(form.eps, { 'attr' : { 'class' : 'form-control', 'placeholder' : 'Eps' } }) }}
       <span class="text-danger">{{ form_errors(form.eps) }}</span>
      </div>
        
    </div>
    
    <div class="col-md-4">
        
      <div class="form-group">
        {{ form_widget(form.contactname, { 'attr' : { 'class' : 'form-control', 'placeholder' : 'Contact Name' } }) }}
       <span class="text-danger">{{ form_errors(form.contactname) }}</span>
      </div>
      
      <div class="form-group">
        {{ form_widget(form.contactphone, { 'attr' : { 'class' : 'form-control', 'placeholder' : 'Contact Phone' } }) }}
       <span class="text-danger">{{ form_errors(form.contactphone) }}</span>
      </div>
      
      <div class="form-group">
        {{ form_widget(form.annexed, {'attr' : { 'class' : 'form-control', 'placeholder' : 'Annexed' } }) }}
       <span class="text-danger">{{ form_errors(form.annexed) }}</span>
      </div>
      
      {#
      <div class="form-group">
        {{ form_widget(form.photo ) }}
       <span class="text-danger">{{ form_errors(form.annexed) }}</span>
      </div>
      #}
      
      <div class="form-group">
         <div class="checkbox">
           <label>
            {{ form_widget(form.active) }} &nbsp;&nbsp;Active
            <span class="text-danger">{{ form_errors(form.active) }}</span>
           </label>&nbsp;&nbsp;&nbsp;&nbsp;
           
           {{ form_widget(form.save, { 'label' : 'Register person', 'attr' : { 'class' : 'btn btn-success' } }) }}
           
         </div>
        </div>
        
    </div>
    
    
    {{form_end(form)}}
    
           </div>
	<div class="col-md-2"></div>
    </div>
</div>
    
{%endblock %}

